<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Post_Sales_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Agreement_Value__c</field>
        <field>Cancellation_Initiated_by__c</field>
        <field>Cancellation_Reasons__c</field>
        <field>Cancellation_Request_Confirmation_Date__c</field>
        <field>Non_Recoverable_GST_of_Invoice_Raised__c</field>
        <field>Interest_Accrued_on_Amount_Due__c</field>
        <field>Forfeiture_Criteria__c</field>
        <field>Forfeiture__c</field>
        <field>Forfeiture_Amount__c</field>
        <field>Brokerage_Paid__c</field>
        <field>Miscellaneous_Expense__c</field>
        <field>Service_Tax__c</field>
        <field>Total_Forfeiture_Amount__c</field>
        <field>Total_Refund_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CRM_Head__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CRM Head Approval</label>
        <name>CRM_Head_Approval</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Checkbox_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Checkbox_False1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Submitted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Submitted_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Booking Cancellation Approval</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
