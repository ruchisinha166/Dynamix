            <action>
                <name>Update_Status_To_Discount_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>animesh.das@dynamixgroup.co.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jessie.k@dynamixgroup.co.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>S&amp;M Head</label>
        <name>S_M_Head</name>
