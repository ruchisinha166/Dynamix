    public static Boolean  SendnotificationForOCReceivalFlag = true;
    public static void sendEmail(List<Project__c> ProjList,Map<Id,Project__c> oldProjMap){
        Set<Id> ProjIds = new Set<Id>();
        List<String> mobileNo;
        Map<String,String> MobTempBodyMap = new Map<String,String>();
        List<EmailMessage> insertEmailMessageList = New List<EmailMessage>();
        Map<String,Id> OrgWideaddressMap = new Map<String,Id>();	
        List<Messaging.SingleEmailMessage> emailMessages = new List<Messaging.SingleEmailMessage>();
        List<OrgWideEmailAddress> ListOWA = [Select Id, Address From OrgWideEmailAddress];
        EmailTemplate emailTemplate = [select Id,Subject,HtmlValue,Body from EmailTemplate where Name =: 'OC Receival Certificate Email'];
        SMS_Template_Id__mdt smsTemplate = [Select Id, SMS_Template__c, External_Template_Id__c From SMS_Template_Id__mdt Where MasterLabel='OC Receival Certificate SMS' Limit 1];
        EmailTemplate smsEmailTemp = [Select Id,Name,HtmlValue From EmailTemplate Where Name = 'OC Receival Certificate SMS' Limit 1];
        
        
        
        for(OrgWideEmailAddress OWA:ListOWA){
            OrgWideaddressMap.put(OWA.Address,OWA.Id);
        }
        if(!ProjList.isEmpty()){
            
            for(Project__c proj:ProjList){
                Project__c projMap = oldProjMap.get(proj.Id);
                if(proj.OC_Receival_Date__c != null && proj.OC_Number__c != null && (oldProjMap.get(proj.Id).OC_Receival_Date__c != proj.OC_Receival_Date__c
                  || proj.OC_Number__c != oldProjMap.get(proj.Id).OC_Number__c)){
                    ProjIds.add(proj.Id);
                }
            }
            if(!ProjIds.isEmpty()){
                system.debug('Inside Loop---'+ProjIds);
                mobileNo =  New  List<String>();
                List<Booking__c> BookList = [Select Id,Name,Primary_Applicant__r.PersonMobilePhone,Project_Name_Formulla__c,
                                             Primary_Applicant__r.PersonEmail,Primary_Applicant__r.FirstName,Stage__c,
                                             Project_Name__r.Name,Project_Name__r.Project_Phone__c,Primary_Applicant_Name_Formulla__c,
                                             Project_Name__r.Project_Email__c From Booking__c where Project_Name__c IN :ProjIds
                                            AND Stage__c != 'Terminated' AND Stage__c != 'Cancellation Initiated'
                                            AND Stage__c != 'Booking Cancelled -- Refund Done' AND Stage__c != 'Booking Cancelled – Refund Ready'	
                                            AND Stage__c != 'Booking Cancelled – Refund Pending'];
                if(!BookList.isEmpty()){
                    for(Booking__c Book:BookList){
                        if(Book.Primary_Applicant__r.PersonEmail!=null){
                            if(Book.Primary_Applicant__r.PersonEmail != null && Book.Primary_Applicant__r.PersonEmail != ''){
                               
                                String htmlbody = emailTemplate.HtmlValue;
                                String plainBody = emailTemplate.Body;
                                system.debug('Book--'+Book.Primary_Applicant__r.PersonEmail+Book.Name+Book.Primary_Applicant__r.FirstName);
                                Messaging.SingleEmailMessage mail = new Messaging.SingleEmailMessage();
                                htmlbody = htmlbody.replace('{!Project Name}',Book.Project_Name__r.Name);
                                plainbody = plainbody.replace('{!Project Name}',Book.Project_Name__r.Name);
                                htmlbody = htmlbody.replace('{!Contact}',Book.Project_Name__r.Project_Phone__c);
                                plainbody = plainbody.replace('{!Contact}',Book.Project_Name__r.Project_Phone__c);
                                htmlbody = htmlbody.replace('{!Customers}',Book.Primary_Applicant_Name_Formulla__c);
                                plainbody = plainbody.replace('{!Customers}',Book.Primary_Applicant_Name_Formulla__c);
                                mail.setToAddresses(new List<string>{Book.Primary_Applicant__r.PersonEmail});
                                mail.setPlainTextBody(plainbody);
                                mail.setHtmlBody(htmlbody);
                                mail.setSubject(emailTemplate.Subject);
                                mail.setOrgWideEmailAddressId(OrgWideaddressMap.get(Book.Project_Name__r.Project_Email__c));
                                mail.setSaveAsActivity(false);
                                emailMessages.add(mail);
                                EmailMessage objEmailMessage = new EmailMessage();
                                objEmailMessage.status = '3'; // email was sent
                                objEmailMessage.RelatedToId = Book.id;
                                objEmailMessage.fromName = 'Dynamix'; // from name
                                objEmailMessage.Subject = 'Email sent to customer on Receival of OC';
                                objEmailMessage.HtmlBody = htmlbody;
                                objEmailMessage.ToAddress = Book.Primary_Applicant__r.PersonEmail;
                                insertEmailMessageList.add(objEmailMessage);
                            }
                            
                            if(Book.Primary_Applicant__r.PersonMobilePhone != null && Book.Primary_Applicant__r.PersonMobilePhone != ''){
                                //SMS Setup
                                String templateBody=smsEmailTemp.HtmlValue;
                                mobileNo.add(Book.Primary_Applicant__r.PersonMobilePhone);
                                templateBody = templateBody.replace('{customername}',Book.Primary_Applicant_Name_Formulla__c);
                                templateBody = templateBody.replace('{projectName}',Book.Project_Name_Formulla__c);                       
                                
                                templateBody=templateBody.stripHtmlTags();
                                MobTempBodyMap.put(Book.Primary_Applicant__r.PersonMobilePhone,templateBody);
                                EmailMessage objEmailMessage = new EmailMessage();
                                objEmailMessage.status = '3'; // email was sent
                                objEmailMessage.RelatedToId = Book.id;
                                objEmailMessage.fromName = 'Dynamix'; // from name
                                objEmailMessage.Subject = 'SMS sent to customer on Receival of OC';
                                objEmailMessage.HtmlBody = templateBody;
                                insertEmailMessageList.add(objEmailMessage);
                            }
                            
                        }
                    }
                    List<Messaging.SendEmailResult> sendResults = Messaging.sendEmail(emailMessages);
                    //String  senderId = 'Test';
                    if(!test.isRunningTest())
                    {
                        SendSMSUtility.sendBulkSMSMethod(MobTempBodyMap, mobileNo,'DYNAMX', smsTemplate.External_Template_Id__c);
                        
                    }
                    if(!insertEmailMessageList.isEmpty())
                    {
                     	insert insertEmailMessageList;   
                    }
                }
            }
            
        } 
    }
