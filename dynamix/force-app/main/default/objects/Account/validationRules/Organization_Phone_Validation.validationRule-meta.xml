<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Organization_Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(IsPersonAccount,NOT(ISBLANK(Organisation_Phone_Number__c)),NOT(ISNUMBER(Organisation_Phone_Number__c)))</errorConditionFormula>
    <errorDisplayField>Organisation_Phone_Number__c</errorDisplayField>
    <errorMessage>Organization phone number can contains only number.</errorMessage>
</ValidationRule>
