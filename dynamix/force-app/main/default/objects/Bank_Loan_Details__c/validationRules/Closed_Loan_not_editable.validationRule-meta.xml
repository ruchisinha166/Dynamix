<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Loan_not_editable</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(PRIORVALUE( Loan_Status__c ), &apos;Closed&apos;),

    NOT(ISNEW())

)</errorConditionFormula>
    <errorMessage>Editing is not allowed when the Status is Closed.</errorMessage>
</ValidationRule>
