<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Other_Complaint</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Complaint_category__c, &quot;Others&quot;),  
    ISBLANK(Other_Complaint__c)
)</errorConditionFormula>
    <errorDisplayField>Other_Complaint__c</errorDisplayField>
    <errorMessage>Please fill details for Other Complaint</errorMessage>
</ValidationRule>
