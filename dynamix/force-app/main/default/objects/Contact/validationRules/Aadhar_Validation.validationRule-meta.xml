<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Aadhar_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT( REGEX(  Aadhar_No__c   , &quot;[0-9]{12}&quot;) ) ,NOT(ISBLANK(  Aadhar_No__c )) )</errorConditionFormula>
    <errorDisplayField>Aadhar_No__c</errorDisplayField>
    <errorMessage>Please enter valid aadhar no</errorMessage>
</ValidationRule>
