<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Location_Picklist_Should_Be_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>OR(AND( NOT(ISBLANK(Location__c  )),ISBLANK( TEXT(Location_Picklist__c )) ), AND(NOT(ISBLANK( TEXT(Location_Picklist__c ))),ISBLANK(Location__c  ) ))</errorConditionFormula>
    <errorDisplayField>Location_Picklist__c</errorDisplayField>
    <errorMessage>Location Match should be mandatory while selecting Location</errorMessage>
</ValidationRule>
